{
  "name": "@cocalc/chat",
  "version": "0.0.1",
  "description": "Shared chat helpers and types for CoCalc",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./server": {
      "import": "./dist/server.js",
      "require": "./dist/server.js",
      "types": "./dist/server.d.ts"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "rm -f tsconfig.tsbuildinfo; pnpm exec tsc --build",
    "test": "pnpm exec jest",
    "clean": "rm -rf dist node_modules tsconfig.tsbuildinfo",
    "depcheck": "pnpm -w exec depcheck \"$PWD\" --ignores=@types/node,@types/jest"
  },
  "dependencies": {
    "@cocalc/conat": "workspace:*",
    "@cocalc/util": "workspace:*",
    "sha1": "^1.1.1"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.10",
    "@types/sha1": "^1.1.3",
    "ts-jest": "^29.4.5"
  },
  "license": "SEE LICENSE.md"
}
