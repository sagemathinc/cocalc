{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "dist",
    "lib": ["es2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2020",
    "baseUrl": ".",
    "paths": {
      "@langchain/core/*": ["node_modules/@langchain/core/dist/*"],
      "@cocalc/conat/*": ["../conat/dist/*"],
      "@cocalc/conat": ["../conat/dist/index"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["dist", "node_modules", "__tests__"],
  "references": [
    { "path": "../backend" },
    { "path": "../conat" },
    { "path": "../util" }
  ]
}
