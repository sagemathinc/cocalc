{
  "name": "@cocalc/project-host",
  "version": "0.0.1",
  "description": "Multi-project host built on CoCalc Lite with embedded runner/file-server/proxy",
  "exports": {
    ".": "./dist/index.js",
    "./*": "./dist/*.js"
  },
  "bin": {
    "cocalc-project-host": "./bin/start.js"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "pnpm exec tsc --build",
    "test": "exit 0",
    "clean": "rm -rf node_modules dist tsconfig.tsbuildinfo build",
    "app": "pnpm run build && node dist/main.js",
    "daemon:start": "node scripts/daemon-start.js",
    "daemon:stop": "node scripts/daemon-stop.js"
  },
  "files": [
    "dist/**",
    "bin/**",
    "scripts/**",
    "README.md",
    "package.json"
  ],
  "author": "SageMath, Inc.",
  "license": "SEE LICENSE.md",
  "dependencies": {
    "@cocalc/backend": "workspace:*",
    "@cocalc/conat": "workspace:*",
    "@cocalc/file-server": "workspace:*",
    "@cocalc/lite": "workspace:*",
    "@cocalc/project-proxy": "workspace:*",
    "@cocalc/project-runner": "workspace:*",
    "@cocalc/util": "workspace:*",
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.23",
    "@types/node": "^22.10.10"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sagemathinc/cocalc"
  },
  "homepage": "https://github.com/sagemathinc/cocalc/tree/master/src/packages/project-host"
}
