#!/usr/bin/env python

import os, sys

if not 'SMC' in os.environ:
    os.environ['SMC'] = os.path.join(os.environ['HOME'], '.smc')

os.chdir(os.path.split(os.path.realpath(__file__))[0] + '/..')

data = os.path.join(os.environ['SMC'], 'console_server')
if not os.path.exists(data):
    os.makedirs(data)
elif sys.argv[1] == 'start':
    for x in os.listdir(data):
        os.unlink(os.path.join(data, x))

cmd = "node_modules/.bin/forever %s -c coffee  -l $SMC/console_server/console_server.log -e $SMC/console_server/console_server.err --pidFile $SMC/console_server/console_server.pid -p $SMC/forever/   console_server.coffee"%sys.argv[1]

os.system(cmd)